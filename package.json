{
  "name": "beancount-cli",
  "version": "1.0.0",
  "description": "一个功能强大的beancount记账命令行工具",
  "main": "dist/index.js",
  "bin": {
    "beancount-cli": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch --coverage",
    "test:optimized": "node scripts/test-optimized.js",
    "test:coverage": "node scripts/test-optimized.js --coverage",
    "demo:tab-completion": "ts-node src/demo/tab-completion-demo.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "format:all": "prettier --write \"**/*.{ts,js,json,md}\" --ignore-path .prettierignore",
    "clean": "rimraf dist",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "beancount",
    "accounting",
    "cli",
    "finance",
    "bookkeeping"
  ],
  "author": "JanYork",
  "license": "MIT",
  "dependencies": {
    "@types/js-yaml": "^4.0.9",
    "boxen": "^7.1.1",
    "chalk": "^4.1.2",
    "chalk-animation": "^2.0.3",
    "cli-columns": "^4.0.0",
    "cli-cursor": "^5.0.0",
    "cli-progress": "^3.12.0",
    "cli-spinners": "^2.9.2",
    "cli-table3": "^0.6.5",
    "cli-truncate": "^4.0.0",
    "commander": "^11.1.0",
    "csv-writer": "^1.6.0",
    "date-fns": "^2.30.0",
    "exceljs": "^4.4.0",
    "figlet": "^1.8.2",
    "gradient-string": "^2.0.2",
    "inquirer": "^8.2.7",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "ora": "^7.0.1",
    "strip-ansi": "^7.1.0",
    "table": "^6.9.0",
    "tabtab": "^3.0.2",
    "terminal-link": "^2.1.1",
    "terminal-size": "^4.0.0",
    "wrap-ansi": "^9.0.0"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.5",
    "@types/figlet": "^1.5.8",
    "@types/gradient-string": "^1.1.6",
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^29.5.8",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
