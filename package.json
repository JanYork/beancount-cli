{
  "name": "beancount-cli",
  "version": "1.0.0",
  "description": "一个功能强大的beancount记账命令行工具",
  "main": "dist/index.js",
  "bin": {
    "beancount-cli": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "format:all": "prettier --write \"**/*.{ts,js,json,md}\" --ignore-path .prettierignore",
    "clean": "rimraf dist",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "beancount",
    "accounting",
    "cli",
    "finance",
    "bookkeeping"
  ],
  "author": "JanYork",
  "license": "MIT",
  "dependencies": {
    "@types/js-yaml": "^4.0.9",
    "chalk": "4",
    "commander": "^11.1.0",
    "date-fns": "^2.30.0",
    "inquirer": "8",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "ora": "^7.0.1",
    "table": "^6.8.1"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^29.5.8",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}